[user]
	email = nate@theklaibers.com
	name = Nate Klaiber
[color]
	ui = auto
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[core]
	excludesfile = /Users/nateklaiber/.gitignore
  editor = mvim -f
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
[mergetool "p4merge"]
  # I put p4merge and DiffMerge in /Applications/Utilities, but you might have them in /Applications.
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge \
  "$PWD/$BASE" \
  "$PWD/$REMOTE" \
  "$PWD/$LOCAL" \
  "$PWD/$MERGED"
  keepBackup = false
  trustExitCode = false
[merge]
  #tool = p4merge # This will be the default merge tool invoked by git mergetool.
  tool = opendiff
[github]
	user = nateklaiber
[push]
	default = simple
[heroku]
	account = personal
